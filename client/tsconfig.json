{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es6",

    "outDir": "./public/dist",
    "target": "es6",
    "allowJs": true,
    "checkJs": false,
    "noEmitOnError": true,
    "strict": false,
    "removeComments": true,
    "sourceMap": true,
    "pretty": true,
    "skipLibCheck": true,
    "watch": true,
    "newLine": "LF",
    "esModuleInterop": true,
    "moduleResolution": "classic"
  },
  "exclude": [
    "**/*.test.ts",
    "webpack.*.js",
    "node_modules",
    "tmp",
    "public/**/*",
    "jest*.js"
  ]
}
